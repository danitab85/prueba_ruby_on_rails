<div class= 'formulario'>


    <%= form_with(model: todo, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_field :description %>
    </div>
    <div class="form-group">
      <%= form.label :completed %>
      <%= form.check_box :completed %>
    </div>
    <%= form.submit %>
    <br>
    <%= link_to '<<Volver', todos_path %>
    <%end%>



</div>
